{
  "manifest_version": 3,
  "name": "ChatGPT \u2192 Google Drive Logger (BYO OAuth)",
  "description": "Save ChatGPT conversations to your Google Drive. Paste your own Google OAuth Client ID in the options.",
  "version": "1.1.0",
  "permissions": [
    "storage",
    "identity",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://accounts.google.com/*",
    "https://*.googleusercontent.com/*"
  ],
  "action": {
    "default_title": "ChatGPT \u2192 Drive Logger",
    "default_popup": "options.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}